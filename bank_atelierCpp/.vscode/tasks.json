{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Make current project",
			"command": "/usr/bin/make",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "Clean current project",
			"command": "/usr/bin/make",
			"args": ["clean"],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}